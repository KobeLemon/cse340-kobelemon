<%# views/account/login.ejs %>

<h2 class="loginTitle"><%- title %></h2>

<%- messages() %>

<% if (errors) { %>
    <ul class="error">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }); %>
    </ul>
  <% } %>

<form action="/account/login" method="post" class="loginForm">
  <label for="account_email">Email:</label>
  <input type="email" id="login_account_email" name="account_email" title="Please enter your email" placeholder="email@domain.com" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" required>

  <label for="account_password">Password:</label>
  <input type="password" id="login_account_password" name="account_password" class="passwordInput" title="Please enter your password" placeholder="Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>

  <span id="passwordBtn">Show Password</span>

  <div class="formParagraph">
    Password Requirements:
    <ul>
      <li>12 characters total</li>
      <li>At least 1 capital letter</li>
      <li>At least 1 number</li>
      <li>At least 1 special character</li>
    </ul>
  </div>

  <button type="submit" id="submit">Login!</button>

  <p>No account yet? <a href="/account/register" id="signUpLink">Sign Up!</a></p>
</form>

<script src="../../js/passwordBtn.js"></script>
