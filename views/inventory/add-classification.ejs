<%# views/inventory/add-classification.ejs %>

<h2 class="addClassificationTitle"><%- title %></h2>
<a href="/inv" class="vehicleManagementLink">‚Üê Back to Vehicle Management</a>
<%- messages() %>
<% if (errors) { %>
  <ul class="error">
  <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
<% } %>
<form action="/inv/add-classification" method="post" class="newClassificationForm">
  <label for="classification_name">Classification Name:</label>
  <input type="text" name="classification_name" id="classification_name" placeholder="Classification Name" pattern="[A-Za-z]+" value="<%= locals.classification_name %>" required>

  <p class="formParagraph">Field is required</p>
  <div class="formParagraph">
    Classification Requirements:
    <ul>
      <li>Alphabetic Characters only</li>
      <li>No numbers, spaces, or special characters</li>
    </ul>
  </div>

  <button type="submit" id="submit">Add Classification</button>
</form>